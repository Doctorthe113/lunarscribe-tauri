{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "fs:scope",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "allow": [
        {
            "path": "$HOME/**"
        }
    ],
    "permissions": [
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        },
        {
            "identifier": "fs:read-all",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        },
        {
            "identifier": "fs:allow-app-write",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        },
        {
            "identifier": "fs:allow-app-write-recursive",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        },
        {
            "identifier": "fs:allow-appcache-write",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        },
        {
            "identifier": "fs:allow-appconfig-write",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        },
        {
            "identifier": "fs:allow-appconfig-write-recursive",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        },
        "core:default",
        "shell:allow-open",
        "dialog:default",
        "core:window:allow-start-dragging",
        "core:window:default",
        "core:window:allow-toggle-maximize",
        "core:window:allow-maximize",
        "core:window:allow-minimize",
        "core:window:allow-close"
    ]
}