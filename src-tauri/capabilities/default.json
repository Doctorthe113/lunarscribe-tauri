{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "fs:scope",
    "description": "Capability for the main window",
    "windows": ["main"],
    "allow": [{ "path": "$HOME/**" }],
    "permissions": [
        {
            "identifier": "fs:scope",
            "allow": [{ "path": "$HOME/**" }]
        },
        {
            "identifier": "fs:read-all",
            "allow": [{ "path": "$HOME/**" }]
        },
        {
            "identifier": "fs:allow-app-write",
            "allow": [{ "path": "$HOME/**" }]
        },
        {
            "identifier": "fs:allow-app-write-recursive",
            "allow": [{ "path": "$HOME/**" }]
        },
        {
            "identifier": "fs:allow-appcache-write",
            "allow": [{ "path": "$HOME/**" }]
        },
        {
            "identifier": "fs:allow-appconfig-write",
            "allow": [{ "path": "$HOME/**" }]
        },
        {
            "identifier": "fs:allow-appconfig-write-recursive",
            "allow": [{ "path": "$HOME/**" }]
        },
        "core:default",
        "shell:allow-open",
        "dialog:default"
    ]
}
